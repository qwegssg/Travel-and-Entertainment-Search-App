<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".infoTab">

    <TableRow android:padding="5dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Address"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/placeAddress"
            android:layout_weight="2"
            android:layout_width="0dp" />
    </TableRow>

    <TableRow android:padding="5dp">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="Phone Number"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/placePhoneNumber"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:autoLink="phone" />
    </TableRow>

    <TableRow android:padding="5dp">

        <TextView
            android:layout_weight="1"
            android:text="Price Level"
            android:layout_width="0dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/placePriceLevel"
            android:layout_weight="2"
            android:layout_width="0dp" />
    </TableRow>

    <TableRow android:padding="5dp">

        <TextView
            android:id="@+id/ratingTitle"
            android:text="Rating"
            android:layout_width="145dp"
            android:textStyle="bold" />
        <RatingBar
            android:id="@+id/ratingBar"
            style = "?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:stepSize="0.1" />
        <TextView
            android:id="@+id/showNoRating"
            android:layout_weight="2"
            android:layout_width="0dp" />
    </TableRow>

    <TableRow android:padding="5dp">

        <TextView
            android:layout_weight="1"
            android:text="Google Page"
            android:layout_width="0dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/placeGooglePage"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:autoLink="web"/>
    </TableRow>

    <TableRow android:padding="5dp">

        <TextView
            android:layout_weight="1"
            android:text="Website"
            android:layout_width="0dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/placeWebsite"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:autoLink="web"/>
    </TableRow>

</TableLayout>